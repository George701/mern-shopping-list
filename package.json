{
  "name": "mern-shopping-list",
  "version": "1.0.0",
  "description": "MERN shopping list. Back end - express, front end - react",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefex client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/George701/mern-shopping-list.git"
  },
  "author": "Georgii Chernikov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/George701/mern-shopping-list/issues"
  },
  "homepage": "https://github.com/George701/mern-shopping-list#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "concurrently": "^5.3.0",
    "express": "^4.16.4",
    "mongoose": "^5.5.1"
  },
  "devDependencies": {
    "nodemon": "^1.18.11"
  }
}
